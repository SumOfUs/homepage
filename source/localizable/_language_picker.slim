- selected_class = 'language-option--current-language'
- path = current_page.url
- path = '/media' if path =~ /\/media/
- en_link = translate_link(path, :en)
a.language-option class="#{I18n.locale == :en ? selected_class : ''}" href=en_link
  | English
- de_link = translate_link(path, :de)
a.language-option class="#{I18n.locale == :de ? selected_class : ''}" href=de_link
  | Deutsch
- fr_link = translate_link(path, :fr)
a.language-option class="#{I18n.locale == :fr ? selected_class : ''}" href=fr_link
  | Français
- es_link = translate_link(path, :es)
a.language-option class="#{I18n.locale == :es ? selected_class : ''}" href=es_link
  | Español
- pt_link = translate_link(path, :pt)
a.language-option class="#{I18n.locale == :pt ? selected_class : ''}" href=pt_link
  | Português
